{
  "manifest_version": 3,
  "name": "Article Quiz Generator",
  "version": "1.0",
  "description": "Generate quiz questions from any article using your OpenAI API key.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["scripting", "activeTab"]
}
